<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.FirstFragment">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_nowplaying_text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:background="@color/gray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/movie_nowplaying_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/movie_nowplaying_text_view">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />


        </LinearLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_toprated_text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_nowplaying_recyclerview" />


        <LinearLayout
            android:id="@+id/movie_toprated_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/movie_toprated_text_view">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />


        </LinearLayout>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/movie_popular_text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_toprated_recyclerview" />


        <LinearLayout
            android:id="@+id/movie_popular_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/movie_popular_text_view"
            tools:listitem="@layout/item_movie" >

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_margin="5dp"
                android:backgroundTint="@color/gray4"
                app:cardCornerRadius="20dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
