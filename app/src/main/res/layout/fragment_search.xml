<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/SearchViewStyle"
            app:queryHint="검색어를 입력하세요"
            app:iconifiedByDefault="true"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/textView"
            android:text="@string/movie_text"
            style="@style/SearchRecyclerTexrViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />


        <TextView
            android:id="@+id/movie_result_detail"
            style="@style/SearchAllViewTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_movie_recyclerview"
            style="@style/SearchRecyclerViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:listitem="@layout/item_movie_search" />

        <TextView
            android:id="@+id/movie_empty"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:gravity="center"
            android:text="검색 결과가 없습니다."
            android:textColor="@color/white"
            android:textSize="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/search_movie_recyclerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/search_movie_recyclerview"
            app:layout_constraintTop_toTopOf="@+id/search_movie_recyclerview" />


        <TextView
            android:id="@+id/textView4"
            android:text="@string/tv_text"
            style="@style/SearchRecyclerTexrViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_movie_recyclerview" />

        <TextView
            android:id="@+id/tv_result_detail"
            style="@style/SearchAllViewTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/search_movie_recyclerview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_tv_recyclerview"
            style="@style/SearchRecyclerViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:listitem="@layout/item_tv_search" />


        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:gravity="center"
            android:text="검색 결과가 없습니다."
            android:textColor="@color/white"
            android:textSize="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/search_tv_recyclerview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />


        <FrameLayout
            android:id="@+id/no_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/white"
                android:src="@drawable/img_searching" />


        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>